{
   "name": "ts-backend",
   "version": "1.0.0",
   "description": "TSOA based backend with dependency injection and TypeORM",
   "main": "index.js",
   "scripts": {
      "test": "echo \"Error: no test specified\" && exit 1",
      "clean": "rimraf dist/*",
      "tsc": "tsc",
      "routes": "tsoa routes && tsoa spec",
      "build": "npm-run-all clean tsc routes",
      "dev:start": "npm-run-all build start",
      "start": "ts-node src/index.ts",
      "prewatch-and-run": "npm-run-all routes",
      "watch-and-run": "ts-node-dev --notify --respawn -- src/server.ts",
      "dev": "npm run watch-and-run",
      "spec": "tsoa spec",
      "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js"
   },
   "dependencies": {
      "body-parser": "^1.19.0",
      "command-exists": "^1.2.9",
      "compression": "^1.7.4",
      "cookie-parser": "^1.4.5",
      "dotenv": "^8.2.0",
      "express": "^4.17.1",
      "helmet": "^4.2.0",
      "jsonwebtoken": "^8.5.1",
      "lodash": "^4.17.21",
      "multer": "^1.4.2",
      "mysql2": "^2.3.3",
      "node-html-parser": "^4.1.3",
      "swagger-ui-express": "^4.1.5",
      "tsoa": "^3.5.2",
      "typeorm": "0.2.30",
      "typescript-ioc": "^3.2.2",
      "winston": "^3.3.3",
      "ws": "^7.5.3"
   },
   "devDependencies": {
      "@types/body-parser": "^1.19.0",
      "@types/compression": "^1.7.0",
      "@types/cookie-parser": "^1.4.2",
      "@types/express": "^4.17.9",
      "@types/multer": "^1.4.5",
      "@types/node": "^16.11.15",
      "@types/swagger-ui-express": "^4.1.2",
      "node-notifier": "^9.0.0",
      "npm-run-all": "^4.1.5",
      "rimraf": "^3.0.2",
      "ts-node": "3.3.0",
      "ts-node-dev": "^1.1.8",
      "typescript": "^4.1.5"
   }
}
